    <sql id="selectSysMenuVo">
        select menu_id, menu_name, parent_id, order_num, path, component, is_frame, menu_type, visible, status, perms, icon, create_by, create_time, update_by, update_time, remark from sys_menu
    </sql>

    <select id="selectSysMenuList" parameterType="com.kunyuesoft.model.domain.SysMenu" resultMap="SysMenuResult">
        <include refid="selectSysMenuVo"/>
        <where>  
            <if test="menuName != null  and menuName != ''"> and menu_name like concat('%', #{menuName}, '%')</if>
            <if test="parentId != null  and parentId != ''"> and parent_id like concat('%', #{parentId}, '%')</if>
            <if test="orderNum != null  and orderNum != ''"> and order_num like concat('%', #{orderNum}, '%')</if>
            <if test="path != null  and path != ''"> and path like concat('%', #{path}, '%')</if>
            <if test="component != null  and component != ''"> and component like concat('%', #{component}, '%')</if>
            <if test="isFrame != null  and isFrame != ''"> and is_frame like concat('%', #{isFrame}, '%')</if>
            <if test="menuType != null  and menuType != ''"> and menu_type like concat('%', #{menuType}, '%')</if>
            <if test="visible != null  and visible != ''"> and visible like concat('%', #{visible}, '%')</if>
            <if test="status != null  and status != ''"> and status like concat('%', #{status}, '%')</if>
            <if test="perms != null  and perms != ''"> and perms like concat('%', #{perms}, '%')</if>
            <if test="icon != null  and icon != ''"> and icon like concat('%', #{icon}, '%')</if>
        </where>
    </select>
    
    <select id="selectSysMenuById" parameterType="Integer" resultMap="SysMenuResult">
        <include refid="selectSysMenuVo"/>
        where menu_id = #{menuId}
    </select>
        
    <insert id="insertSysMenu" parameterType="com.kunyuesoft.model.domain.SysMenu" useGeneratedKeys="true" keyProperty="menuId">
